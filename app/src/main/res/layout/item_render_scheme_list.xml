<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_shader_list_width"
    android:layout_height="@dimen/item_shader_list_height">

    <ImageView
        android:id="@+id/imageView_background_item_render_scheme_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/textView_title_item_render_scheme_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"/>
</android.support.v7.widget.CardView>